<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="view_gymers_tag_list" model="ir.ui.view">
        <field name="name">gymers.tag.list</field>
        <field name="model">gymers.tag</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="color" widget="color_picker"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>
    <record id="view_gymers_tag_form" model="ir.ui.view">
        <field name="name">gymers.tag.form</field>
        <field name="model">gymers.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_gymers_tag" model="ir.actions.act_window">
        <field name="name">Gymers Tag</field>
        <field name="res_model">gymers.tag</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>
                create your first tag!
            </p>
        </field>
    </record>
    </data>
</odoo>
