<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_gym_training_form" model="ir.ui.view">
        <field name="name">gym.training.form</field>
        <field name="model">gym.training</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="training_name"/>
                            <field name="trainer_id"/>
                            <field name="reference_record"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_gym_training" model="ir.actions.act_window">
        <field name="name">Training</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">gym.training</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
    </record>

</odoo>